---
import qrCodeImage from "../images/qr.svg";
---

<section class="row row-cols-1 row-cols-md-2 row-cols-xxl-3 mt-5">
  <div class="col mb-5">
    <h2 class="mb-3">
      <i class="fas fa-envelope"></i>
      <span>Contact</span>
    </h2>
    <a href="mailto:contact@vour.ch">contact@vour.ch</a>
  </div>

  <div class="col mb-5">
    <figure>
      <img
        src={qrCodeImage.src}
        alt="QR Code to this page"
        loading="lazy"
        width="256"
        height="256"
        class="rounded shadow-sm"
      />
      <figcaption>Link to this page</figcaption>
    </figure>
  </div>
</section>
