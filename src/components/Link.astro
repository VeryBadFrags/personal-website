---
import type { CollectionEntry } from "astro:content";
interface Props {
  link: CollectionEntry<"links">;
}

const { link } = Astro.props;
---

<a
  href={link.data.url}
  target="_blank"
  class="list-group-item list-group-item-action"
  ><i class={link.data.icon}></i> {link.data.text}</a
>
<style>
  .fa-js {
    color: #f0db4f;
  }

  .fa-linkedin {
    border-radius: 2px;
    color: #006192;
    background-color: #fff;
    padding: 2px 2px 1px 2px;
  }

  .fa-newspaper {
    color: #fff;
  }

  .fa-github {
    color: #fff;
  }

  .fa-youtube {
    border-radius: 4px;
    color: #ff0000;
    background-color: #fff;
    padding: 0 1px 0 1px;
  }
</style>
